{
  "name": "BikeBreak",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "mocha server/test --compilers js:babel-core/register",
    "clean": "rimraf client/dist && mkdir client/dist",
    "copy:html": "cp client/src/index.html client/dist/",
    "copy:style": "cp -R client/src/style client/dist",
    "copy:images": "cp -R client/src/images client/dist",
    "copy": "npm run copy:html && npm run copy:style && npm run copy:images",
    "lint": "echo 'TODO: lint js'",
    "compile": "browserify client/src/app.js -t babelify --debug -o client/dist/bundle.js",
    "prebuild:client": "npm run lint && npm run clean",
    "build:client": "npm run compile",
    "postbuild:client": "npm run copy",
    "build:server": "babel server/src --out-dir server/dist",
    "start": "node server/dist/server",
    "start:client": "http-server client/dist",
    "build": "npm run build:client && npm run build:server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.0",
    "connect-busboy": "0.0.2",
    "express": "^4.13.4",
    "immutable": "^3.7.6",
    "jquery": "^2.2.2",
    "mongodb": "^2.1.11",
    "morgan": "^1.7.0",
    "promise": "^7.1.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "redux": "^3.3.1",
    "request": "^2.69.0",
    "socket.io": "^1.4.5",
    "xml2js": "^0.4.16"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "chai": "^3.5.0",
    "chai-immutable": "^1.5.3",
    "http-server": "^0.9.0",
    "mocha": "^2.4.5",
    "rimraf": "^2.5.2",
    "uglifyjs": "^2.4.10"
  }
}
